<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <com.zhhz.reader.view.SearchEditText
        android:id="@+id/detailed_title"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/search_rectangle_background"
        android:drawablePadding="10dp"
        android:hint="@string/search_text"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/search_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="@string/search_clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_title" />

</androidx.constraintlayout.widget.ConstraintLayout>